// Path: ./admin/tsconfig.json  (ve ./coturn-node/tsconfig.json)
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true, // JSON dosyalarını import etmeye yarar

    /* Bu paket bir uygulama olduğu için ayarlar */
    "outDir": "dist", // <-- Derlenmiş dosyaları 'dist' klasörüne koyar.
    "rootDir": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}